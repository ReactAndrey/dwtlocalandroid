<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true">


        <ImageView
            android:id="@+id/guidance"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_margin="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="0dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:labelFor="@id/editScore"
            android:id="@+id/tvScore"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Score" />

        <EditText
            android:id="@+id/editScore"
            android:focusable="true"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Add score"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:labelFor="@id/editScore"
            android:id="@+id/tvCommments"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Comments" />


        <EditText
            android:hint="Add comments"
            android:id="@+id/editComment"
            android:focusable="true"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/presetButton"
            android:background="@color/green_item"
            android:textColor="@color/button_text"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+ PRESETS" />
        <Button
            android:id="@+id/addImageButton"
            android:layout_margin="16dp"
            android:background="@color/green_item"
            android:textColor="@color/button_text"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="+ ADD IMAGE" />
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Presets: Chemical Odour, Chemical Taste">


        </TextView>

        <TextView
            android:id="@+id/counterLabel"
            android:textSize="48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1">
        </TextView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>